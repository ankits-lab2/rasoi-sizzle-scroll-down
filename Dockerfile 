# === Build Stage ===
FROM node:18 AS builder

WORKDIR /app
COPY . .
RUN npm install
RUN npm run build

# === Production Stage ===
FROM node:18-slim

RUN npm install -g serve

# ðŸ‘‡ FIX: Serve from /app/public because Vite build is inside dist/public
COPY --from=builder /app/dist/public /app

EXPOSE 3030

CMD ["serve", "-s", "/app", "-l", "3000"]
